{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "allowJs": true,
    "importHelpers": true,
    "module": "commonjs",
    "types": [],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}